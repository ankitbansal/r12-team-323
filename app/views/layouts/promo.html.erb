<!DOCTYPE html>
<html>
<head>
<title>R12Team323</title>
<%= stylesheet_link_tag "application", :media => "all" %>
<link href='http://fonts.googleapis.com/css?family=Montez' rel='stylesheet' type='text/css'>
<%= javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.js" %>
<style>
    *{
        margin:0;
        padding:0;
    }
    body{
        font-family:Arial;
        background:#C4E8EA url("assets/promo/bg.png") no-repeat top left;
    }
    .title{
      font-family: 'Montez',cursive;
      float: left;
      font-size: 200px;
      height: 240px;
      left: 145px;
      position: relative;
      top: 500px;
      width: 520px;
    }
    #content{
        margin:0 auto;
    }

</style>
<%= csrf_meta_tags %>
</head>
<body class="promo">
  <div id="content">
    <%= yield %>
  </div>
  <div class="footer"></div>
    <!-- The JavaScript -->
  <%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js" %>
  <%= javascript_include_tag "jquery.easing.1.3.js" %>
  <script type="text/javascript">
    $(function() {
        $('#nav > div').hover(
        function () {
            var $this = $(this);
            $this.find('img').stop().animate({
                'width'     :'199px',
                'height'    :'199px',
                'top'       :'-25px',
                'left'      :'-25px',
                'opacity'   :'1.0'
            },500,'easeOutBack',function(){
                $(this).parent().find('ul').fadeIn(700);
            });
    
            $this.find('a:first,h2').addClass('active');
        },
        function () {
            var $this = $(this);
            $this.find('ul').fadeOut(500);
            $this.find('img').stop().animate({
                'width'     :'52px',
                'height'    :'52px',
                'top'       :'0px',
                'left'      :'0px',
                'opacity'   :'0.1'
            },5000,'easeOutBack');
    
            $this.find('a:first,h2').removeClass('active');
        }
    );
    });
  </script>
</body>
</html>
