<div data-role="content" class="project-show">
  <div data-role="collapsible-set">
    <%= render :partial => "todo" %>
    <div data-role="collapsible" data-collapsed="false">
      <%= render :partial => 'map' %>
    </div>
    <div data-role="collapsible" data-collapsed="false">
      <h3>
        Comments
      </h3>
      <ul>
      <%- @project.comments.each do |c| -%>
	<li data-corners="false" data-shadow="false" data-iconshadow="true" data-wrapperels="div" data-icon="arrow-r" data-iconpos="right" data-theme="d" class="ui-btn ui-btn-icon-right ui-li-has-arrow ui-li ui-btn-up-d">
	  <div class="ui-btn-inner ui-li">
	      <p><%= c.comment %></p>
	  </div>
	</li>
	<%- end -%>
      </ul>
      <div id="new-comments">
      <%= form_for [@project, @comment] do |f|-%>
        <%= f.text_area :comment -%>
        <%= f.submit -%>
      <%- end -%>
      </div>
    </div>
    <div data-role="collapsible" data-collapsed="false">
      <h3>
        Twitter
      </h3>
      
    </div>
  </div>
</div>
