<%= form_for(@project) do |f| %>
  <div data-role="fieldcontain">
    <fieldset data-role="controlgroup">
      <label for="textinput1">
        Name
      </label>
      <%= f.text_field :name %>
    </fieldset>
  </div>
  <div data-role="fieldcontain">
    <fieldset data-role="controlgroup">
      <label for="textinput1">
        Date
      </label>
      <input id="project_project_date" name="project[project_date]" size="30" type="date" class="ui-input-text ui-body-c ui-corner-all ui-shadow-inset">
    </fieldset>
  </div>
  <div data-role="fieldcontain">
    <fieldset data-role="controlgroup">
      <label for="textinput1">
        Twitter Hash Tag
      </label>
      <%= f.text_field :hashtag %>
    </fieldset>
  </div>
  <div data-role="fieldcontain">
    <fieldset data-role="controlgroup">
      <label for="textinput1">
        Instagram Hash Tag
      </label>
      <%= f.text_field :instagram_tag %>
    </fieldset>
  </div>

  <div id="checkboxes1" class="checkboxes" data-role="fieldcontain">
    <h3>Select Tools</h3>
    <input id="checkbox1" name="project[enable_todo]" type="checkbox" />
    <label for="checkbox1"> Enable Todos</label>
    <input id="checkbox4" name="project[enable_comments]" type="checkbox" />
    <label for="checkbox4">Enable Comments</label>
  </div>
  <div data-role="fieldcontain">
    <fieldset data-role="controlgroup">
      <label for="textinput2">
        Location
      </label>
      <input name="" id="searchTextField" placeholder="" value="" type="text" />
		<%= f.hidden_field :latitude, :id => "Xa" %>
		<%= f.hidden_field :longitude, :id => "Ya" %>
    </fieldset>
  </div>
  <div id="map_canvas" style="height:300px; width:100%"></div>
  <div id="checkboxes3" data-role="fieldcontain">
    <fieldset data-role="controlgroup" data-type="vertical">
      <legend>
        Invite Your Friends
      </legend>
	<% @friends.first(10).each do |f|%>
      <input id="checkbox<%= f['id'] %>" name="invites[<%=@friends.index(f)%>]" value='{"fb_id" : "<%=f['id']%>"}' type="checkbox" />
      <label for="checkbox<%= f['id'] %>">
        <%= f["name"] %>
      </label>
	<% end %>
    </fieldset>
  </div>
  <%= f.submit %>
<% end %>
